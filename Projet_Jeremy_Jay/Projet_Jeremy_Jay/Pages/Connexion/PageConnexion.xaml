<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Projet_Jeremy_Jay.Pages.Connexion.PageConnexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projet_Jeremy_Jay.Pages.Connexion"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="#F3F3F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

   
        <Grid  Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <Button Content="CrÃ©er un admin"
                Grid.Column="1"
                Margin="20"
                Click="btnCreerAdmin_Click"
                Background="#007ACC"
                Foreground="White"
                CornerRadius="5"/>
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Width="420"
                Padding="30"
                CornerRadius="10">

                <StackPanel Spacing="15">

                    <TextBlock Text="Connexion administrateur"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                    <TextBox x:Name="tbxUser" 
                         Header="Nom d'utilisateur"/>

                    <PasswordBox x:Name="tbxPass"
                             Header="Mot de passe"/>

                    <TextBlock x:Name="errMsg" 
                           Foreground="Red"/>

                    <Button Content="Se connecter"
                        Click="btnLogin_Click"
                        Background="#0078D7"
                        Foreground="White"
                        Height="45"
                        CornerRadius="5"/>
                </StackPanel>

            </Border>
        </Grid>
    </Grid>

</Page>