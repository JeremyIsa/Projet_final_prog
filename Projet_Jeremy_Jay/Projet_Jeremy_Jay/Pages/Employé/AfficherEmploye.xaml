<?xml version="1.0" ?>
<Page
    x:Class="Projet_Jeremy_Jay.Pages.Employé.AfficherEmploye"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projet_Jeremy_Jay.Pages.Employé"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:Classes="using:Projet_Jeremy_Jay.Classes"
    mc:Ignorable="d">

    <Grid Padding="20" RowDefinitions="Auto,Auto,*">
        <TextBlock Text="Liste des Employé"
                FontSize="28"
                FontWeight="Bold"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"/>

       <Button x:Name="btnAjouter"
            Content="Ajouter un employé"
            Grid.Row="1"
            Width="200"
            Height="40"
            HorizontalAlignment="Center"
            Background="#0078D7"
            Foreground="White"
            Click="btnRedirection_Click"/>



        <GridView x:Name="lvEmployes"
          Grid.Row="2"
          ItemsSource="{x:Bind ListeEmploye}"
          IsItemClickEnabled="False"
          SelectionMode="None">

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="Classes:Employe">

                    <Border Background="LightBlue"
                    Padding="15"
                    CornerRadius="12"
                    Width="250"
                    Margin="10"
                    BorderBrush="#DDD"
                    BorderThickness="1">

                        <StackPanel Spacing="10"
                                    Background="LightBlue">

                            <Grid HorizontalAlignment="Center">
                                <Ellipse Width="90"
                                 Height="90">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{x:Bind Photo}" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>


                            <TextBlock Text="{x:Bind Prenom}"
           FontSize="20"
           FontWeight="Bold"
           HorizontalAlignment="Center"/>

                         
                            <TextBlock Text="{x:Bind Nom}"
           FontSize="18"
           HorizontalAlignment="Center"/>

                        
                            <Rectangle Height="1" Fill="#DDD" Margin="0,5"/>

                        
                            <StackPanel Spacing="6">

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Matricule : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Matricule}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Date de naissance : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Date_naissance}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Email : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Email}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Adresse : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Adresse}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Date embauche : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Date_embauche}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Taux horaire : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Taux_horaire}"/>
                                    <TextBlock Text="$/h"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Statut : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Statut}"/>
                                </StackPanel>

                            </StackPanel>

            
                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0" HorizontalAlignment="Center">

                                <Button Content="Modifier"
                                Background="#0078D7"
                                Foreground="White"
                                Width="90"
                             Click="Button_Modifier"/>

                            </StackPanel>

                        </StackPanel>
                    </Border>

                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>

</Page>
