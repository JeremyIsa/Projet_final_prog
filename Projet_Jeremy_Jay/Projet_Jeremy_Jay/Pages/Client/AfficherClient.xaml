<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Projet_Jeremy_Jay.Pages.Client.AfficherClient"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projet_Jeremy_Jay.Pages.Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Classes="using:Projet_Jeremy_Jay.Classes"
    mc:Ignorable="d">

    <Grid Padding="20" RowDefinitions="Auto,Auto,*">

        <!-- Titre -->
        <TextBlock Text="Liste des Clients"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Bouton Ajouter -->
        <Button x:Name="btnAjouter"
                Content="Ajouter un client"
                Grid.Row="1"
                Width="200"
                Height="40"
                HorizontalAlignment="Center"
                Background="#0078D7"
                Foreground="White"
                Click="btnAjouter_Click"/>

        <!-- LISTE DES CLIENTS -->
        <GridView x:Name="lvClients"
                  Grid.Row="2"
                  ItemsSource="{x:Bind ListeClient}"
                  IsItemClickEnabled="False"
                  SelectionMode="None">

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="Classes:Client">

                    <Border Background="LightBlue"
                            Padding="15"
                            CornerRadius="12"
                            Width="250"
                            Margin="10"
                            BorderBrush="#DDD"
                            BorderThickness="1">

                        <StackPanel Spacing="10"
                                    Background="LightBlue">

                            <TextBlock Text="{x:Bind Nom}"
                                       FontSize="18"
                                       HorizontalAlignment="Center"/>

                            <!-- Infos du client -->
                            <StackPanel Spacing="6">

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ID : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Id_client}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Adresse : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Adresse}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Téléphone : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Num_tel}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Email : " FontWeight="Bold"/>
                                    <TextBlock Text="{x:Bind Email}"/>
                                </StackPanel>

                            </StackPanel>

                            <!-- Boutons Modifier -->
                            <StackPanel Orientation="Horizontal"
                                        Spacing="10"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Center">

                                <Button x:Name="btnModifier"
                                        Content="Modifier"
                                        Background="#0078D7"
                                        Foreground="White"
                                        Width="90"
                                        Click="btnModifier_Click"/>

                            </StackPanel>

                        </StackPanel>

                    </Border>

                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

    </Grid>
</Page>
