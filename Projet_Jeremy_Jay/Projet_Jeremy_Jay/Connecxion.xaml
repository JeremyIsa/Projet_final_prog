<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Projet_Jeremy_Jay.Connecxion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Projet_Jeremy_Jay"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

 

        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Padding="30"
              Background="White" CornerRadius="12">

            <StackPanel Spacing="15">

                <TextBlock Text="Connexion"
                           FontSize="30"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

            <TextBlock Text="Identifiant" FontWeight="SemiBold"/>
            <TextBox x:Name="txtIdentifiant" PlaceholderText="Entrez votre identifiant"/>


            <TextBlock Text="Mot de passe" />
                <PasswordBox x:Name="txtPassword" PlaceholderText="••••••••"/>

             
                <Button Content="Se connecter"
                        Background="#4A90E2"
                        Foreground="White"
                        CornerRadius="8"
                        Height="45"
                        FontSize="18"
                        Margin="0,10,0,0"/>

            </StackPanel>

        </Grid>

   
</Page>
